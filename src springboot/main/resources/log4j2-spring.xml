<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>

<Configuration status="WARN">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
					pattern="%d [%level] [%t] [%logger{40}] - %msg%n%throwable" />
		</Console>

		<RollingFile name="RollingFile"
					 fileName="/var/log/apis/travels-java-api/travels-java-api.log"
					 filePattern="/var/log/apis/travels-java-api/$${date:yyyy-MM}/travels-java-api.log-%d{MM-dd-yyyy}-%i.log.tar.gz">
			<PatternLayout
					pattern="%d [%level] [%t] [%logger{40}] - %msg%n%throwable" />
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="250 MB" />
			</Policies>
		</RollingFile>

	</Appenders>

	<Loggers>
		<Root level="INFO">
			<AppenderRef ref="Console"/>
			<AppenderRef ref="RollingFile"/>
		</Root>
	</Loggers>
</Configuration>